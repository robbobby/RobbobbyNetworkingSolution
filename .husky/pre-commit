#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Format C# files
echo "📝 Formatting C# files..."
dotnet format

# Build the solution
echo "🔨 Building solution..."
dotnet build

# Run unit tests (skip if no tests available)
echo "🧪 Running unit tests..."
if dotnet test --filter "Category=Unit" --verbosity minimal 2>/dev/null; then
    echo "✅ Tests completed successfully!"
else
    echo "⚠️  No tests found or tests failed - continuing with commit"
fi

echo "✅ Pre-commit checks completed successfully!"
