# Global analyzer configuration
# This file disables auto-fixing for problematic analyzers

# Disable all xUnit auto-fixing
dotnet_diagnostic.xUnit*.auto_fix = false
dotnet_diagnostic.xUnit*.auto_fix_severity = none

# Specifically disable xUnit1000 auto-fixing
dotnet_diagnostic.xUnit1000.auto_fix = false
dotnet_diagnostic.xUnit1000.auto_fix_severity = none
dotnet_diagnostic.xUnit1000.severity = warning
